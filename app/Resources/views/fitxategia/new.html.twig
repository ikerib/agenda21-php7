{% extends 'base.html.twig' %}

{% block body %}


    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

    {#{% if not form.vars.valid %}#}
        <div class="alert alert-error">
            {{ form_errors(form) }}
        </div>
    {#{% endif %}#}

    <div class="row">
        <div class="form-group">
            <label for="min-date" class="col-sm-4 control-label">{{ 'Izena' | trans }}</label>

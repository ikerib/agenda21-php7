            </div>
        </div>
    </div>


    <div class="row">
        <div class="form-group pull-right">
            <input type="submit" value="Bidali" class="btn btn-primary" />
        </div>
    </div>
    {{ form_end(form) }}


    {{ parent() }}
{% endblock %}
